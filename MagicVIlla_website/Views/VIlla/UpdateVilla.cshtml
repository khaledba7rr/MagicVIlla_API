@using MagicVIlla_website.Models.DTOs.VillaDTOs

@model VillaUpdatDTO

<form class="form" asp-action="UpdateVilla">
    <br />
    <div class="conatienr border p-3">

        <h1 class="text-primary"> Update villa </h1>

        <hr />

        <div class="row g-3">

            <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size: 20px;"> Name</label>
            </div>

            <div class="col-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Rate" class="control-label pt-2" style="font-size: 20px;"> Rate</label>
            </div>

            <div class="col-10">
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>



            <div class="col-2">
                <label asp-for="Details" class="control-label pt-2" style="font-size: 20px;"> Details</label>
            </div>

            <div class="col-10">
                <textarea asp-for="Details" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>



            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2" style="font-size: 20px;"> ImageUrl</label>
            </div>

            <div class="col-10">
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="Occupancy" class="control-label pt-2" style="font-size: 20px;"> Occupancy</label>
            </div>

            <div class="col-10">
                <input asp-for="Occupancy" class="form-control" />
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Sqft" class="control-label pt-2" style="font-size: 20px;"> Sqft</label>
            </div>

            <div class="col-10">
                <input asp-for="Sqft" class="form-control" />
                <span asp-validation-for="Sqft" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="Amenity" class="control-label pt-2" style="font-size: 20px;"> Amenity</label>
            </div>

            <div class="col-10">
                <textarea asp-for="Amenity" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Amenity" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-controller="Villa" asp-action="VillaIndex" class="btn btn-outline-danger"> Back to villas </a>
            </div>

            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-outline-success" />
            </div>

        </div>

    </div>
</form>